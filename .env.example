# Environment Configuration
NODE_ENV=development
PORT=4402
HOST=0.0.0.0

# Database Configuration
DB_PATH=./data
DB_MODE=nosql

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
API_KEY_SALT=your-api-key-salt

# Logging
LOG_LEVEL=info

# Performance
MAX_CONNECTIONS=1000
CACHE_SIZE_MB=512
ENABLE_COMPRESSION=true

# Search
ENABLE_FUZZY_SEARCH=true
ENABLE_SEMANTIC_SEARCH=true
ENABLE_VECTOR_SEARCH=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_TYPE=local
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
BACKUP_FTP_HOST=
BACKUP_FTP_PORT=21
BACKUP_FTP_USER=
BACKUP_FTP_PASSWORD=

# SQL Configuration
SQL_ENABLED=true
SQL_PORT=3306
API_PORT=4402
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=opendbs

# Web Interface
WEB_INTERFACE_ENABLED=true
